{
	"name":"chromeCrawl",
	"description":"Crawl website page content information",
	"version":"1.1",
	"manifest_version": 3,
	"options_page": "options.html",
	"browser_action":{
		"default_popup":"popup.html",
		"default_title":"抓取页面所有内容工具",
		"default_icon":{
			"16":"images/48.png",
			"32":"images/32.png",
			"48":"images/48.png",
			"128":"images/128.jpg"
		}
	},
	"commands":{
		"_execute_browser_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+F",
          "mac": "MacCtrl+Shift+F"
        },
        "description": "Opens hello.html"
      }
	},
	"background":{
		"service_worker":["background.js"]
	},
	"content_scripts":[{
		"js":["content_script.js"],
		"matches":["*://*/*"]
	}],
	"permissions":["tabs","storage","activeTab","*://*/*","webRequest","webRequestBlocking","webNavigation"],
	"icons": {
      	"16":"images/16.png",
		"32":"images/32.png",
		"48":"images/48.png",
		"128":"images/128.jpg"
    }
}